<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/bottomCard"
        android:layout_width="152dp"
        android:layout_height="174dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".7">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgReview"
            android:layout_width="36dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="11dp"
            app:civ_border_color="#FF000000"></de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/some_id"
            android:layout_width="55dp"
            android:layout_height="11dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="18dp"
            android:gravity="top"
            android:text="Асанов Азат"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/tvReview"
            android:layout_width="132dp"
            android:layout_height="101dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="54dp"
            android:gravity="top"
            android:text="это великолепное произведение, читал его лет 15 назад , сейчас понимаю, что книга способна перевернуть сознание..."
            android:textSize="12sp" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>