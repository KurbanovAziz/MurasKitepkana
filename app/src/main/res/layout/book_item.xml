<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="328dp"
    android:layout_height="155dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.cardview.widget.CardView
    android:layout_width="102dp"
    android:layout_height="147dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:cardCornerRadius="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="222dp"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
     android:src="@drawable/ic_launcher_background"
        android:scaleType="centerCrop"
        android:id="@+id/book_img"
        />
</androidx.cardview.widget.CardView>
<TextView
    android:id="@+id/name_tv"
    android:layout_width="185dp"
    android:layout_height="wrap_content"
    android:textSize="20sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginStart="114dp"
    android:layout_marginTop="4dp"
    android:fontFamily="@font/ff_roboto_regular"
    android:text="Плаха"
    android:textColor="@color/black"
    />
    <TextView
        android:id="@+id/author_tv"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="114dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/ff_roboto_regular"
        android:text="Чынгыз Айтматов"
        android:textColor="@color/gray"
        />
    <ImageView
        android:id="@+id/chosen_img"
        android:layout_width="22dp"
        android:layout_height="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="301dp"
        android:src="@drawable/chosen_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="17.78dp"
        android:numStars="5"
        android:stepSize="1.0"
        android:layout_marginTop="58.67dp"
        android:layout_marginStart="114dp"
        android:layout_marginEnd="89.56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:progressDrawable="@drawable/custom_rating"
        android:id="@+id/stars"
        />
    <TextView
        android:id="@+id/score_tv"
        android:layout_width="wrap_content"
        android:layout_height="21.11dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="55dp"
        android:layout_alignParentTop="true"
        android:text="4.9"
        app:layout_constraintStart_toEndOf="@id/stars"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#FF4004"
        android:textSize="17.78sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>